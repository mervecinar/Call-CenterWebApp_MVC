@model IEnumerable<WebApplication13.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<br />

<!doctype html>
<html lang="en">
<head ruanat="server">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/add66288fd.js" crossorigin="anonymous"></script>
</head>
<style>
    body {
        background-color: white;
    }

    table {
        border-collapse: collapse;
        width: 375px;
        margin: auto;
    }

    td, th {
        border: 1px solid black;
        text-align: left;
        vertical-align: middle;
        padding: 3px;
    }

    tr:nth-child(even) {
        background-color: lightgrey;
    }

    tr:nth-child(even) {
        background-color:;
    }

    ul {
        text-align: center;
        list-style-position: inside;
    }

    h1 {
        color: darkslategrey;
        text-align: center;
    }
   
</style>

<body>
    <h1>CUSTOMERS &nbsp;&nbsp;<i class="fa-sharp fa-solid fa-people-group"></i> </h1>




    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @TempData["AlertMessage"]
        </div>
    }
    <div></div>

    <p>
        <a style="  !important;" asp-action="Create"><i class="fa-solid fa-user-plus"></i> Create New Cosrepresantative</a>
    </p>
    <form asp-action="searchB">
        <input type="text" name="search" id="search" />
        <button type="submit" style="background-color:lightgrey;!important; color:white" class="btn"><i class="fa fa-search text-white"></i>Search Customer </button>
    </form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.country)
                </th>



            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.age)
                    </td>
              <td>
                        <a asp-action="Edit" asp-route-id="@item.CustomerId"><i class="fa-solid fa-pen-to-square"></i></a>  |
                        <a asp-action="Details" asp-route-id="@item.CustomerId"><i class="fa-solid fa-circle-info"></i></a>  |
                        <a asp-action="Delete" asp-route-id="@item.CustomerId"><i class="fa-solid fa-delete-left"></i></a> |
                      
                  
                  
            </td>
        </tr>

}
        </tbody>
    </table>
    <div>
        <a asp-area="" asp-controller="RequestComplaints" asp-action="Create">Add - Request or Complaint<i class="fa-solid fa-envelope"></i></a>
    </div>
   
</body>

</html>
